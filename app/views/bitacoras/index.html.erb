<%= search_form_for(@search, :html => {class: "", role: "form"}) do |f| %>

  <div class="container">
   <h4><p id="notice"><%= notice %></p></h4>

  <h2>Buscar Beneficiario</h2>
 <div class="row">
<div class="col-lg-3">
<div class="form-group">
<%= f.label :nombre_cont, "Nombre" %>
<%= f.text_field :nombre_cont, class: "form-control", placeholder: "Nombre", autofocus: true %>
  </div>
</div>
<div class="col-lg-3">
<div class="form-group">
<%= f.label :telefono_cont, "Teléfono" %>
<%= f.text_field :telefono_cont, class: "form-control", placeholder: "Teléfono", autofocus: true %>
  </div>
</div>
<div class="col-lg-3">
<div class="form-group">
<%= f.label :correo_cont, "Email" %>
<%= f.text_field :correo_cont, class: "form-control", placeholder: "Email", autofocus: true %>
  </div>
</div>

</div>
<div class="row">
<div class="col-lg-3">
<div class="form-group">
<%= f.label :municipio_cont, "Municipio" %>
<%= f.text_field :municipio_cont, class: "form-control", placeholder: "Municipio ", autofocus: true %>
  </div>
</div>
<div class="col-lg-3">
<div class="form-group">
<%= f.label :estado_cont, "Estado" %>
    
    <%= f.select :estado_cont, [["Aguascalientes", "Aguascalientes"], ["Baja California", "Baja California"], ["Baja California Sur", "Baja California Sur"], ["Campeche", "Campeche"], ["Chiapas", "Chiapas"], ["Chihuahua", "Chihuahua"], ["Coahuila", "Coahuila"], ["Colima", "Colima"], ["Ciudad de México", "Ciudad de México"], ["Durango", "Durango"], ["Estado de México", "Estado de México"], ["Guanajuato", "Guanajuato"], ["Guerrero", "Guerrero"], ["Hidalgo", "Hidalgo"], ["Jalisco", "Jalisco"], ["Michoacán", "Michoacán"], ["Morelos", "Morelos"], ["Nayarit", "Nayarit"], ["Nuevo León", "Nuevo León"], ["Oaxaca", "Oaxaca"], ["Puebla", "Puebla"], ["Querétaro", "Querétaro"], ["Quintana Roo", "Quintana Roo"], ["San Luis Potosí", "San Luis Potosí"], ["Sinaloa", "Sinaloa"], ["Sonora", "Sonora"], ["Tabasco", "Tabasco"], ["Tamaulipas", "Tamaulipas"], ["Tlaxcala", "Tlaxcala"], ["Veracruz", "Veracruz"], ["Yucatán", "Yucatán"], ["Zacatecas", "Zacatecas"]], {:prompt => "Elegir"}, { class: "form-control" } %>

    
  </div>
</div>
<div class="col-lg-3">
<div class="form-group">
<%= f.label :area_cont, "Area" %>
<%= f.text_field :area_cont, class: "form-control", placeholder: "Area ", autofocus: true %>
  </div>
</div>
</div>
<div class="row">
  <div class="form-group">
  <div class=" col-lg-1">

  <%= f.submit class: 'btn btn-primary btn-lg' %></div>
 
  <div class="col-lg-1">
    <%= f.submit "Reset", :type => "reset", class: 'btn btn-primary btn-lg' %>
  </div>
   </div>
</div>
<% end %>
</div>








<div class="container-fluid">
   <div class="row">
      <div class="col-lg-4 text-left">
        <%= link_to 'Agregar', new_bitacora_path, :class => "btn btn-primary btn_agregar" %>
      </div>
      <div class="col-lg-8 text-right">
        <%= will_paginate @bitacoras, renderer: BootstrapPagination::Rails %> 
     

    </div>
   <div class="col-lg-12  custyle">
    <table class="table table-striped custab">

  <thead>
    <tr><th><%= sort_link(@search, :estatus, "Estatus") %></th>
       <th><%= sort_link(@search, :nombre, "Nombre") %></th>
      <th><%= sort_link(@search, :telefono, "Telefono")%></th>
      <th><%= sort_link(@search, :correo, "Correo")%></th>
      <th><%= sort_link(@search, :estado, "Estado")%></th>
      <th><%= sort_link(@search, :municipio, "Municipio")%></th>
      <th><%= sort_link(@search, :area, "Area")%></th>
        <th><%= sort_link(@search, :alcalde, "Alcalde")%></th>
      <th><%= sort_link(@search, :estructura, "Estructura")%></th>
        <th><%= sort_link(@search, :gruposcomunitarios, "Grupos comunitarios")%></th>
         <th><%= sort_link(@search, :ampliacionmetas, "Ampliación de metas")%></th>
       <th><%= sort_link(@search, :convenio, "Convenio")%></th>
       <th><%= sort_link(@search, :tema, "Temas a convenir")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bitacoras.each do |bitacora| %>
      <tr>
      <td><%= bitacora.estatus %></td>
        <td><%= bitacora.nombre %></td>
        <td><%= bitacora.telefono %></td>
        <td><%= bitacora.correo %></td>
        <td><%= bitacora.estado %></td>
        <td><%= bitacora.municipio %></td>
        <td><%= bitacora.area %></td>
        <td><%= bitacora.alcalde %></td>
        <td><%= bitacora.estructura %></td>
        <td><%= bitacora.gruposcomunitarios %></td>
        <td><%= bitacora.ampliacionmetas %></td>
        <td><%= bitacora.convenio %></td>
        <td><%= bitacora.tema %></td>
       
        <td><%= link_to 'Ver', bitacora %></td>
        <td><%= link_to 'Editar', edit_bitacora_path(bitacora) %></td>
        <td><%= link_to 'Eliminar', bitacora, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




</div>
 
</div>
</div>

